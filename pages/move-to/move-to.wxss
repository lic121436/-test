/* pages/move-to/move-to.wxss */
page{
  background-color: #d4d0cd;
}
.move-box {
  z-index: 10;
  position: fixed;
  left: 50%;
  top: 50%;
  width: 150px;
  height: 150px;
  text-align: center;
  font-size: 60rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.35);
  border-radius: 60rpx;
   cursor: pointer; 
  transform: translate(-50%, -50%);
}


.move-box .move-content {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 50%;
  height: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1),
   0 0 0 20rpx rgba(255, 255, 255, 0.2),
   0 0 0 40rpx rgba(255, 255, 255, 0.1);
}

.move-box:hover {
       background-color: rgba(0, 0, 0, 0.6);
}

.move-box:hover .move-content{
      background-color: rgba(255, 255, 255, 0.8);
}
